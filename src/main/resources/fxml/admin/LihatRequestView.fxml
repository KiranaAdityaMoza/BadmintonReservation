<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.badminton.app.badmintonreservation.controller.admin.LihatRequestController">

    <top>
        <HBox spacing="10" style="-fx-padding: 10;">
            <Button fx:id="btnApprove" text="Approve" />
            <Button fx:id="btnReject" text="Reject" />
            <Button fx:id="btnBack" text="Kembali" />
        </HBox>
    </top>

    <center>
        <TableView fx:id="tblRequest" prefWidth="900" prefHeight="500">
            <columns>
                <TableColumn fx:id="colId" text="ID" />
                <TableColumn fx:id="colReservasiId" text="Reservasi ID" />
                <TableColumn fx:id="colJenis" text="Jenis Request" />
                <TableColumn fx:id="colTanggalBaru" text="Tanggal Baru" />
                <TableColumn fx:id="colJamMulai" text="Jam Mulai Baru" />
                <TableColumn fx:id="colJamSelesai" text="Jam Selesai Baru" />
                <TableColumn fx:id="colAlasan" text="Alasan" />
                <TableColumn fx:id="colStatus" text="Status" />
            </columns>
        </TableView>
    </center>

</BorderPane>
