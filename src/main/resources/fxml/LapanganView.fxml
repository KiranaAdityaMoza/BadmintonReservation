<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="16" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.badmintonapp.badmintonreservation.controller.LapanganController"
      stylesheets="@../style.css"
      prefWidth="600" prefHeight="400">

    <!-- ====================== TITLE ===================== -->
    <Label text="Manajemen Lapangan" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <!-- ====================== FORM INPUT ===================== -->
    <HBox spacing="10" alignment="CENTER">
        <VBox spacing="6">
            <Label text="Nama Lapangan:"/>
            <TextField fx:id="txtNama" promptText="Masukkan nama lapangan"/>
        </VBox>

        <VBox spacing="6">
            <Label text="Harga Sewa / Jam:"/>
            <TextField fx:id="txtHarga" promptText="contoh: 50000"/>
        </VBox>

        <Button text="Tambah" fx:id="btnTambah" style="-fx-padding: 6 14;"/>
    </HBox>

    <!-- ====================== TABEL LAPANGAN ===================== -->
    <TableView fx:id="tableLapangan" prefHeight="250" prefWidth="500">
        <columns>

            <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
            <TableColumn fx:id="colNama" text="Nama Lapangan" prefWidth="200"/>
            <TableColumn fx:id="colHarga" text="Harga / Jam" prefWidth="150"/>

        </columns>
    </TableView>

</VBox>

