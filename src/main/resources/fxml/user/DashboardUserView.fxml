<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.badminton.app.badmintonreservation.controller.DashboardUserController"
            prefWidth="800" prefHeight="600">

    <children>
        <VBox spacing="10" layoutX="20" layoutY="20">
            <Label text="Dashboard User" style="-fx-font-size:18px; -fx-font-weight:bold;" />

            <HBox spacing="20">
                <Button text="Lihat Lapangan" fx:id="btnViewLapangan" />
                <Button text="Buat Reservasi" fx:id="btnBuatReservasi" />
                <Button text="Reservasi Saya" fx:id="btnReservasiSaya" />
                <Button text="Ajukan Request" fx:id="btnAjukanRequest" />
                <Button text="Logout" fx:id="btnLogout" />
            </HBox>

            <Label text="Jumlah Reservasi Aktif:" style="-fx-font-weight:bold;" />
            <Label fx:id="lblJumlahReservasiAktif" />

            <TableView fx:id="tblMyReservasi" prefHeight="400">
                <columns>
                    <TableColumn text="ID" fx:id="colId" />
                    <TableColumn text="Lapangan" fx:id="colLapangan" />
                    <TableColumn text="Tanggal" fx:id="colTanggal" />
                    <TableColumn text="Jam" fx:id="colJam" />
                    <TableColumn text="Status" fx:id="colStatus" />
                    <TableColumn text="Total Harga" fx:id="colTotalHarga" />
                </columns>
            </TableView>
        </VBox>
    </children>
</AnchorPane>
